CREATE TABLE videojoc (
    id INT AUTO_INCREMENT PRIMARY KEY,
    titol VARCHAR(255) NOT NULL,
    plataforma VARCHAR(100),
    any_lançament YEAR,
    preu DECIMAL(10, 2),
    valoracio FLOAT
);

